        android:layout_height="wrap_content"
        android:text="Menu"
        android:layout_gravity="center_horizontal"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recomend_btn"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beef_btn"



            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
